check-if-array-is-sorted-and-rotated
class Solution:
    def check(self, nums: List[int]) -> bool:

        n=len(nums)
        count=0
        for i in range(n-1):
            if nums[i+1]<nums[i]:
                count=count+1
        if nums[0]<nums[-1]:
            count+=1
        return count<=1    

